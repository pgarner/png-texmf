%%
%% General notation
%%
\usepackage{amsmath}
\usepackage{amssymb}

% Vectors are bold in TeX, underlined in patents
% Complex numbers are fraktur (may not be a good idea)
\renewcommand{\Vec}[1]{\boldsymbol{#1}}
\newcommand{\Com}[1]{\mathfrak{#1}}
\newcommand{\Max}[1]{\max\left(#1\right)}
\newcommand{\Min}[1]{\min\left(#1\right)}
\newcommand{\Exp}[1]{\exp\left(#1\right)}
\newcommand{\Abs}[1]{\lvert#1\rvert}
\newcommand{\Norm}[1]{\lVert#1\rVert}

% Operators
\DeclareMathOperator{\Ei}{Ei}
\DeclareMathOperator*{\argmax}{argmax}
\DeclareMathOperator*{\argmin}{argmin}
\DeclareMathOperator{\erf}{erf}
\DeclareMathOperator{\logit}{logit}
\DeclareMathOperator{\odds}{odds}

% Transpose, identity
\newcommand{\T}{\mathsf{T}}
\newcommand{\I}{\boldsymbol{I}}

% Probability
\renewcommand{\Pr}[2][]{P_{#1}\left(#2\right)}
\newcommand{\PD}[2][]{p_{#1}\left(#2\right)}
\newcommand{\PR}[2][]{\mathbb{P}_{#1}\left(#2\right)}
\newcommand{\Ex}[2][]{\mathbb{E}_{#1}\left(#2\right)}
\newcommand{\CondPr}[3][]{\Pr[#1]{#2\mid#3}}
\newcommand{\CondPD}[3][]{\PD[#1]{#2\mid#3}}
\newcommand{\CondPR}[3][]{\PR[#1]{#2\mid#3}}
\newcommand{\CondEx}[3][]{\Ex[#1]{#2\mid#3}}
% \newcommand{\Va}[1]{\text{Var}\left(#1\right)}

% Distributions
\newcommand{\Normal}[3]{\mathcal{N}\left(#1;#2,#3\right)}
\newcommand{\CNormal}[3]{\mathfrak{N}\left(#1;#2,#3\right)}
\newcommand{\IGamma}[3]{G^{-1}\left(#1;#2,#3\right)}

% General variables to use for general cases
\newcommand{\mean}{\mu}
\newcommand{\Mean}{\Vec{\mean}}
\newcommand{\stddev}{\sigma}
\newcommand{\variance}{\upsilon}
\newcommand{\Variance}{\Vec{\variance}}
\newcommand{\Covariance}{\Vec{\Sigma}}

% Option "stats" changes to some statistics vs. signal processing conventions
\DeclareOption{stats}{
  \renewcommand{\Pr}[2][]{f_{#1}\left(#2\right)}
  \renewcommand{\PD}[2][]{f_{#1}\left(#2\right)}
}
\ProcessOptions\relax

